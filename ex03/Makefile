NAME		:=	ex03
CXX			:=	c++
CXXFLAGS	:=	-Wall -Wextra -Werror -Iinclude -std=c++98

SRCS		:=	src/main\
				src/AMateria.cpp\
				src/ICharacter.cpp\
				src/IMateriaSource.cpp\
				src/Ice.cpp\
				src/Cure.cpp\
				src/Character.cpp\
				src/MateriaSource.cpp
OBJ_DIR		:=	obj
OBJS		=	$(SRCS:%.cpp=$(OBJ_DIR)/%.o)

all: $(NAME)


$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

$(OBJ_DIR):
	@mkdir -p $(OBJ_DIR)

$(OBJ_DIR)/%.o: %.cpp | $(OBJ_DIR)
	@mkdir -p $(dir $@)
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re